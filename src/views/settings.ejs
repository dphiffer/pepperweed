<form action="/settings" method="post" class="settings">
	<h2>Settings</h2>
	<div class="field">
		<label for="title">Site title</label>
		<input type="text" id="title" name="title" value="<%= site.title %>" placeholder="Pepperweed">
	</div>
	<div class="field">
		<label for="fromEmail">Send email from</label>
		<input type="text" id="fromEmail" name="fromEmail" value="<%= site.fromEmail %>" placeholder="user@example.com">
	</div>
	<div class="field">
		<label for="smtpConfig">SMTP config</label>
		<input type="text" name="smtpConfig" value="<%= site.smtpConfig %>" placeholder="smtps://user:password@smtp.example.com">
	</div>
	<div class="field">
		<input type="checkbox" id="signupsEnabled" name="signupsEnabled" value="1"<% if (site.signupsEnabled) { %> checked="checked"<% } %> class="switch">
		<label for="signupsEnabled">Allow new users to sign up</label>
	</div>
	<% if (feedback) { %>
		<div class="feedback">
			<%= feedback %>
		</div>
	<% } %>
	<input type="submit" value="Save">
</form>
