<form action="/login" method="post">
	<label>
		Email address
		<input type="email" name="email">
	</label>
	<label>
		Password
		<input type="password" name="password">
	</label>
	<% if (response) { %>
		<div class="login__response">
			<%= response %>
		</div>
	<% } %>
	<input type="submit" value="Login">
</form>
